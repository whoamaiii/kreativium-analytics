# Kreativium Analytics v2 - Environment Configuration
# Copy this file to .env and configure with your values

# =============================================================================
# AI Configuration (OpenRouter)
# =============================================================================

# OpenRouter API Key - Required for AI analysis features
# Get your key from: https://openrouter.ai/keys
VITE_OPENROUTER_API_KEY=sk-or-v1-...

# AI Model to use - defaults to gpt-4o-mini
# Examples: gpt-4o-mini, anthropic/claude-3-5-sonnet, meta-llama/llama-3.1-70b-instruct
VITE_AI_MODEL_NAME=openai/gpt-4o-mini

# AI API Base URL - defaults to OpenRouter
# For development with proxy: /ai
# For production: https://openrouter.ai/api/v1
VITE_AI_BASE_URL=/ai

# Enable AI analysis features (set to 'true' to enable)
VITE_AI_ANALYSIS_ENABLED=true

# AI Temperature (0.0 - 2.0) - controls randomness, defaults to 0.2
VITE_AI_TEMPERATURE=0.2

# AI Max Tokens - maximum response length, defaults to 1024
VITE_AI_MAX_TOKENS=1024

# Local-only mode - set to 'true' to skip API key checks for local LLMs
VITE_AI_LOCAL_ONLY=false

# Disable evidence injection in AI prompts
VITE_AI_EVIDENCE_DISABLED=false

# =============================================================================
# Application Mode
# =============================================================================

# POC Mode - lightweight build with reduced features
VITE_POC_MODE=false

# Disable analytics worker (forces fallback to main thread)
VITE_DISABLE_ANALYTICS_WORKER=false

# Enable experimental explanation interface
VITE_EXPLANATION_V2=false

# =============================================================================
# Logging & Debug
# =============================================================================

# Log Level: debug | info | warn | error | none
VITE_LOG_LEVEL=info

# Debug mode - enables verbose logging
VITE_DEBUG=false
